{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "ES2015",
      "ES2016.Array.Include"
    ],
    "types": [
      "mocha"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
